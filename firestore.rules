rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User settings - only the owner can read/write
    match /users/{userId}/data/settings {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User review data - only the owner can read/write
    match /users/{userId}/data/reviewData {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User rate limits - users can only read their own (writes done by Cloud Function)
    match /userRateLimits/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Word translations - shared cache (writes done by Cloud Function only)
    match /wordTranslations/{word} {
      allow read: if request.auth != null;
    }
  }
}

